{
  "name": "dbrew",
  "version": "0.0.0-development",
  "description": "Homebrew for docker apps",
  "main": "bin/dbrew.js",
  "bin": {
    "dbrew": "bin/dbrew.js"
  },
  "scripts": {
    "start": "node bin/dbrew.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "coverage": "jest --coverage",
    "lint": "eslint . --ext .js --fix",
    "lint:staged": "eslint --fix",
    "prettify": "prettier --write"
  },
  "repository": "https://github.com/ameerthehacker/dbrew.git",
  "author": "ameerthehacker",
  "license": "Apache",
  "private": false,
  "devDependencies": {
    "@types/jest": "^25.1.4",
    "eslint": "^6.8.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,html,json,scss,md,yml}": [
      "yarn prettify"
    ],
    "*.{spec,js}": [
      "yarn lint:staged"
    ]
  }
}
